<h1>New Game</h1>
<br>

<ul class="letter-cases">
  <% @ten_letters_list.each do |letter| %>
    <li class="letter"><%= letter.upcase %></li>
  <%end%>
</ul>
<br>
<br>

<form action="/results" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @ten_letters_list %>
  <label for="form"></label>Quel est le plus long mot que tu peux trouver ?<br>
  <br>
  <input type="text" name="word"><br>
  <input type="submit" value="Joue!">
</form>
